{
    "name": "abr4xas/simple-blog",
    "description": "A witty description goes here",
    "keywords": [
        "abr4xas",
        "simple-blog",
        "markdown"
    ],
    "homepage": "https://github.com/abr4xas/simple-blog",
    "license": "MIT",
    "authors": [
        {
            "name": "angel cruz",
            "email": "angel@tepuilabs.dev",
            "homepage": "https://angelcruz.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "league/commonmark": "^2.3.9",
        "simonvomeyser/commonmark-ext-lazy-image": "^2.0.3",
        "spatie/laravel-enum": "^3.0.2",
        "spatie/laravel-package-tools": "^1.14.2",
        "torchlight/torchlight-commonmark": "^0.5.5"
    },
    "require-dev": {
        "laravel/pint": "^1.7",
        "nunomaduro/collision": "^6.4",
        "nunomaduro/larastan": "^2.5.1",
        "orchestra/testbench": "^7.22.1",
        "pestphp/pest": "^1.22.6",
        "pestphp/pest-plugin-laravel": "^1.4",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.1.3",
        "phpstan/phpstan-phpunit": "^1.3.10",
        "phpunit/phpunit": "^9.6.5",
        "spatie/laravel-ray": "^1.32.3"
    },
    "autoload": {
        "psr-4": {
            "Abr4xas\\SimpleBlog\\": "src",
            "Abr4xas\\SimpleBlog\\Database\\Factories\\": "database/factories"
        },
        "files": [
            "src/Helper/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Abr4xas\\SimpleBlog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Abr4xas\\SimpleBlog\\SimpleBlogServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
